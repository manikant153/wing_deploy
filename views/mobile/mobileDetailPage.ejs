

<div class="card-MDP">
    <div class="row g-0">
        <!-- Left side for the image -->
        <div class="col-md-4">
            <img src="/<%= mobile.image.replace('public\\', '') %>" class="img-fluid rounded-start card-img-left" alt="<%= mobile.modelname %>" style="max-height: 300px;">
        </div>

        <!-- Right side for the details -->
        <div class="col-md-8">
            <div class="card-body-MDP">
                <h5 class="card-title"><%= mobile.brand %> - <%= mobile.modelname %></h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Price:</strong> $<%= mobile.price %></li>
                    <li class="list-group-item"><strong>Warranty:</strong> <%= mobile.warranty %></li>
                    <li class="list-group-item"><strong>Battery Health:</strong> <%= mobile.batterhealth %></li>
                    <% if (mobile.anymoredeatils) { %>
                        <li class="list-group-item"><strong>Additional Details:</strong> <%= mobile.anymoredeatils %></li>
                    <% } %>
                    <li class="list-group-item"><strong>Added on:</strong> <%= mobile.createdAt.toDateString() %></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="card-footer text-center">
        <a href="/mobile" class="btn btn-secondary">Back to Mobile List</a>
    </div>
</div>
